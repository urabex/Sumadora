<section class="main__login">
  <div class="container pt-5">
    <div class="row">
      <h2 class="col-lg-12 main__login--heading">
        Sumadoraにログイン
      </h2>
    </div>
    <%= form_with model: @user, url: user_session_path, id: "new_user", class: "new_user", local: true do |f| %>
    
      <div class="main__login--email">
        <div class="row">
          <label class="col-lg-12">メールアドレス</label>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
      </div>
      
      <div class="main__login--password">
        <div class="row">
          <label class="col-lg-12">パスワード</label>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
      </div>
      
      <div class="main__login--button">
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      </div>

    <% end %>
    <%= render "users/shared/links" %>
  </div>
</section>