<section class="main__signup">
  <div class="container pt-5">
    <div class="row">
      <h2 class="col-lg-12 main__signup--heading">
        会員登録
      </h2>
    </div>
    <%= form_with model: @user, url: user_registration_path, id: "new_user", local: true do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="main__signup--email">
        <div class="row">
          <label class="col-lg-12">メールアドレス</label>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6 main__signup--username">
          <div class="row">
            <label class="col-lg-12">ユーザーネーム</label>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>
          </div>
        </div>
        <div class="col-lg-6 main__signup--password">
          <div class="row">
            <label class="col-lg-12">パスワード（6文字以上）</label>
          </div>
          <div class="col-lg-12">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>

    <% end %>
    <%= render "users/shared/links" %>
  </div>
</section>