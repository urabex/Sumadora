<section class="modal fade" id="destroyModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content modal__destroy">
      <div class="container">
        <div class="modal-header">
          <h2 class="modal-title">
            本当に退会しますか？
          </h2>
          <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="modal__destroy--buttonlist">
            <div class="modal__destroy--buttonitem">
              <%= link_to users_mypage_path do %>
                <button class="modal__destroy--mypagereturn">マイページに戻る</button>
              <% end %>
            </div>
            <div class="modal__destroy--buttonitem">
              <%= link_to users_path, method: :DELETE do %>
                <button class="modal__destroy--withdrawal">退会する</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>